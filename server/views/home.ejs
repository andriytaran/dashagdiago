<% layout('layout_main') -%>
<div id="content" class="content">
  <!-- begin breadcrumb -->
  <ol class="breadcrumb pull-right">
    <li class="breadcrumb-item"><a href="javascript:;">Home</a></li>
    <li class="breadcrumb-item active">Dashboard</li>
    <!-- <li class="breadcrumb-item"><div class="drop">Benchmark setups</div></li> -->
  </ol>
  <!-- end breadcrumb -->
  <!-- begin page-header -->
  <h1 class="page-header">Player Dashboard <small>Full View of Players.</small></h1>
  <!-- end page-header -->

  <!-- begin row -->
  <div class="row">
    <!-- begin col-3 -->
    <div class="col-lg-3 col-md-6">
      <div class="widget widget-stats bg-black-darker">
        <div class="stats-icon"><i class="fa fa-child"></i></div>
        <div class="stats-info">
          <h4>
            <%= team %> Potential Recruits <br><strong><i>matches based on coach benchmarks</i></strong></h4>
          <p>
            <%= overallCount %>
          </p>
        </div>
        <div class="stats-link" id="overallList">
          <a href="javascript:;">View Detail <i class="fa fa-arrow-alt-circle-right"></i></a>
        </div>
      </div>
    </div>
    <!-- end col-3 -->
    <!-- begin col-3 -->
    <div class="col-lg-3 col-md-6">
      <div class="widget widget-stats bg-gradient-purple">
        <div class="stats-icon"><i class="fa fa-link"></i></div>
        <div class="stats-info">
          <h4><%= team %> Potential Defensive Recruits</h4>
          <p>
            <%= defenseCount %></p>
        </div>
        <div class="stats-link" id="defenseList">
          <a href="javascript:;">View Detail <i class="fa fa-arrow-alt-circle-right"></i></a>
        </div>
      </div>
    </div>
    <!-- end col-3 -->
    <!-- begin col-3 -->
    <div class="col-lg-3 col-md-6">
      <div class="widget widget-stats bg-grey-darker">
        <div class="stats-icon"><i class="fa fa-users"></i></div>
        <div class="stats-info">
          <h4><%= team %> Potential Offensive Recruits</h4>
          <p>
            <%= offenseCount %></p>
        </div>
        <div class="stats-link" id="offenseList">
          <a href="javascript:;">View Detail <i class="fa fa-arrow-alt-circle-right"></i></a>
        </div>
      </div>
    </div>
    <!-- end col-3 -->
    <!-- begin col-3 -->
    <!-- <div class="col-lg-3 col-md-6">
      <div class="widget widget-stats bg-grey-darker">
        <div class="stats-icon"><i class="fa fa-users"></i></div>
        <div class="stats-info">
          <h4>Average score</h4>
          <p>
            <% if (overallScore) { %>
            <%= overallScore %>%
            <% } else { %>Not available
            <% } %>
          </p>
        </div>
        <div class="stats-link">
          <p> <br></p>
        </div>
      </div>
    </div> -->
    <!-- end col-3 -->
  </div>
  <!-- end row -->
  <!-- begin row -->
  <div class="row">
    <!-- begin col-8 -->
    <div class="col-lg-12">
      <!-- begin panel -->
      <div class="panel panel-inverse" data-sortable-id="index-1">
        <div class="panel-heading">
          <h4 class="panel-title">Cultural Fit | <i> Recruits most lieky to fit best with your current roster </i></h4>
        </div>
        <div class="panel-body panel-height-5 culturalFdiv">
          <div class="height-xs"><h2>Top potential recruits to review </h2>
            <div id="culturaltop">
              <div class="elLoader">
                <div class="loader"></div>
              </div>
            </div>
          </div>

          <div id="cultural-fit" class="height-sm">
            <div class="elLoader">
              <div class="loader"></div>
            </div>
          </div>
        </div>
        <!-- end panel -->
      </div>
      <!-- end col-6 -->
    </div>
    <!-- end row -->
  </div>

  <div class="row">
    <div class="bench dropdown">
      <button type="button" class="btn btn-primary dropdown-toggle lmenu" data-toggle="dropdown" aria-haspopup="true"
        aria-expanded="false">Add new bechmarks</button>
      <div class="dropdown-menu">
        <a class="dropdown-item" id="academbench" href="/academbench">Academic attributes</a>
        <a class="dropdown-item" id="emotionalbench" href="/emotionalbench">Emotional intel</a>
        <a class="dropdown-item" id="corebench" href="/corebench">Core attributes</a>
        <a class="dropdown-item" id="socialbench" href="/socialbench">Scoial profile</a>
        <a class="dropdown-item" id="athleticbench" href="/athleticbench">Athletic attributes</a>
      </div>
    </div>
  </div>
  <!-- begin row -->
  <!-- OVERALL SCORE -->
  <!--
  <div class="row">

    <div class="col-lg-12" id="overallBlock1">
      <div class="elLoader">
        <div class="loader"></div>
      </div>
    </div>

  </div>
-->
  <!-- end row -->

</div>

<!-- start modal -->
<div class="modal fade" id="chartmodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalplayerstitle">Players</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="players">
          <div class="loader"></div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<!-- end modal -->

